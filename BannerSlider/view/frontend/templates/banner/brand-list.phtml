/** @var \Tbb\BannerSlider\Block\Widget\BannerSlider $block */
$banners = $block->getBanners();
?>
<h2>brandlist</h2>
<?php if ($banners->getSize()): ?>
    <div class="owl-carousel brand-slider">

        <?php foreach ($banners as $banner):

            ?>
            <?= $banner->getText(); ?>

            <div class="item">
                <?php if ($banner->getUrl()): ?>
                    <a href="<?= $banner->getUrl(); ?>" title="<?= $banner->getName(); ?>" target="_blank">
                <?php endif; ?>
                <img src="<?= $banner->getImageUrl(); ?>" alt="<?= $banner->getName(); ?>" width="100%"/>
                <?php if ($banner->getUrl()): ?>
                    </a>
                <?php endif; ?>
                <h2><?=  $banner->getName(); ?></h2>
            </div>
        <?php endforeach; ?>
    </div>
    <script type="text/javascript">
        require(['jquery', 'owlcarousel'], function($) {
            $('.brand-slider').owlCarousel({
                responsive:{
                    0:{
                        items:2
                    }
                },
                autoplay:false,
                loop:true,
                nav : true,
                dots: false,
                autoplaySpeed : 500,
                navSpeed : 500,
                dotsSpeed : 500,
                autoplayHoverPause: true,
                margin:30
            });
        });
    </script>
<?php endif; ?>
